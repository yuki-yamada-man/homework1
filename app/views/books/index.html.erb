<body>
<div class='one'>
<h2>Books</h2>

<div class=container >
 <table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>

  <body>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <td><%= link_to 'Show' ,book_path(book.id) %></td>
      <td><%= link_to 'Edit' ,edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy'  ,method: :delete ,"data-confirm" => "本当にいいんだな？"%></td>
    </tr>
    <% end %>
  </body>
 </table>
</div>

<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>

 <p>Title</p>
 <%= f.text_field:title ,size:"90x5" %>

 <p>Body</p>
 <%= f.text_area:body ,size:"90x10"%>

<div>
 <%= f.submit 'Create book' %>
</div>
</div>

<% end %>
</body>