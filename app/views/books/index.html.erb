<body>
<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>

  <body>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <td><%= link_to 'Show' ,book_path(book.id) %></td>
      <td><%= link_to 'Edit' ,edit_book_path(book.id) %></td>
      <td><%= link_to 'Destroy'  ,method: :delete ,"data-confirm" => "本当に削除しますか？"%></td>
    </tr>
    <% end %>
  </body>
</table>


<h2>New book</h2>
<%= form_with model:@book,local:true do |f| %>

 <p>Title</p>
 <%= f.text_field:title %>

 <p>Body</p>
 <%= f.text_area:body %>

 <%= f.submit 'Create book' %>

<% end %>
</body>